<div class="container">
    <div class="row">
        <div class="col">
            <h1>All Users</h1>
        </div>
    </div>
    <div class="row">
        <table class="table table-stripped">
            <thead>
                <th>ID</th>
                <th>Name*</th>
                <th>Email</th>
                <th>Created On</th>
                <th>User Level</th>
            </thead>
            <tbody>
            @foreach(var user in @ViewBag.AllUsers)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td><form action="/users/show/@user.UserId">
                        <input type="hidden" name="user_id" value=@user.UserId>
                        <button class="btn btn-link">@user.firstname @user.lastname</button>
                    </form></td>
                    <td>@user.email</td>
                    <td>@user.created_at.ToString("MMM d yyyy")</td>
                    @if(@user.level == 9)
                    {
                        <td>Admin</td>
                    }
                    else
                    {
                        <td>Normal</td>
                    }
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
