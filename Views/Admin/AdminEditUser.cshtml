@model UserDashboard.Models.UpdateViewModel
<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <span class="navbar-brand">UserDashboard</span>
        </div>
        <div id="#sectors" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a asp-area="" asp-controller="Admin" asp-action="ManageUsers">Dashboard</a></li>
                <li><a asp-area="" asp-controller="Normal" asp-action="EditUser">Profile</a></li>
            </ul>
            <!-- Can Have JavaScript interact with DOM when nav bar toggle clicked -->
            <ul class="nav navbar-nav pull-right">
                <li><a>Welcome @ViewBag.UserName!</a></li>
                <li><a href="/">Logoff</a></li>
            </ul>
        </div>
    </div>
</nav>
<div class="container">
    <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6">
            <h2>Edit User # @ViewBag.Userinfo.UserId</h2>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-5">
            <br>
            <a class="btn btn-primary pull-right" href="/dashboard/admin" role="button">Return to Dashboard</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="col-xs-10">
                <h4>Edit Information</h4>
                <div class="row">
                    <form action="/admin/editinfo" method="POST">
                        <div class="col">
                            <h5>Email Address:</h5>
                            <p class="text-danger"><span asp-validation-for="email"></span>@TempData["invalidemail"]</p>
                            <p class="text-success">@TempData["email"]</p>
                            <input class="form-control" type="email" name="email" value=@ViewBag.Userinfo.email>
                            <h5>First Name:</h5>
                            <p class="text-danger"><span asp-validation-for="firstname"></span></p>
                            <p class="text-success">@TempData["firstname"]</p>
                            <input class="form-control" type="text" name="firstname" value=@ViewBag.Userinfo.firstname>
                            <h5>Last Name:</h5>
                            <p class="text-danger"><span asp-validation-for="lastname"></span></p>
                            <p class="text-success">@TempData["lastname"]</p>
                            <input class="form-control" type="text" name="lastname" value=@ViewBag.Userinfo.lastname>
                            <h5>User Level: </h5>
                            <p class="text-success">@TempData["level"]</p>
                            <select class="form-control" name="level">
                                @if(@ViewBag.Userinfo.level == 9)
                                {
                                    <option value=9>Admin</option>
                                    <option value=1>Normal</option>
                                }
                                @if(@ViewBag.Userinfo.level == 1)
                                {
                                    <option value=1>Normal</option>
                                    <option value=9>Admin</option>
                                }
                            </select>
                            <br>
                            <button class="btn btn-success pull-right" type="submit">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="col-xs-10 border">
                <h4>Change Password</h4>
                <div class="row">
                    <form action="/admin_updateuserpw" method="POST">
                    <div class="col">
                        <p class="text-danger">@TempData["invalidPW"]</p>
                        <h5>Password: </h5>
                        <p class="text-success">@TempData["PWupdate"]</p>
                        <p class="text-danger">@TempData["pwMismatch"]</p>
                        <input class="form-control" type="password" name="password">
                        <h5>Password Confirmation:</h5>
                        <input class="form-control" type="password" name="passwordconfirm">
                        <br>
                        <button class="btn btn-success pull-right" type="submit">Update Password</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
